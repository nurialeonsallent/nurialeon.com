---
import GoIcon from "~/icons/go.astro"
import IndividualIcon from "~/icons/individual.astro"
import { servicios } from "~/content/servicios"

export type Props = {
  href: string
  icon: any
  type: keyof typeof servicios
}

const { type } = Astro.props
const { icon: Icon, ...servicio } = servicios[type]
---

<a href={servicio.link} class="servicio-card">
  <div class="icon"><Icon /></div>
  <div class="title">
    <h3>Terapia Individual</h3>
    <span class="price">{servicios["presencial"].precio}</span>
  </div>
  <span class="subtitle">Adultos y Adolescentes</span>
  <a
    href="/contacto"
    class="cta self-center flex items-center rounded-md border-2 border-brand-600 bg-brand-400 active:bg-brand-600 hover:bg-brand-500 py-2 text-center text-base font-semibold text-white pl-8 pr-4 no-underline"
  >
    Â¡Pide tu Cita! <GoIcon /></a
  >
</a>

<style>
  .servicio-card {
    @apply flex grow flex-col items-center justify-start gap-2 rounded-lg border-2 border-brand-300 bg-brand-50 no-underline transition-all hover:border-brand-400 hover:shadow-lg lg:gap-4;

    .icon {
      @apply -mt-6 flex h-12 w-12 items-center justify-center rounded-full bg-brand-400 text-2xl text-white lg:-mt-7 lg:h-14 lg:w-14;
    }

    .title {
      @apply flex items-center justify-center gap-4 px-2 lg:px-3;
    }

    h3 {
      @apply m-0 text-xl lg:tracking-tighter;
    }

    .price {
      @apply m-0 shrink-0 font-title text-lg font-bold text-neutral-700;
    }

    .subtitle {
      @apply m-0 -mt-2 hidden text-sm italic text-neutral-700 lg:-mt-3;
    }

    p {
      @apply grow p-2 text-sm lg:px-3 lg:py-0 lg:text-base;
    }

    ul {
      @apply px-2 text-[0px] text-neutral-600 lg:px-3;
    }

    ul > li {
      @apply inline text-xs italic leading-snug before:content-[',_'] first:before:content-[''] lg:text-sm lg:leading-snug;
    }

    button {
      @apply w-full rounded-b-lg border-t-2 border-brand-300 bg-white px-3 py-2 text-center font-medium text-brand-500;
    }
  }
</style>
