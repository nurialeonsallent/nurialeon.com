{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@images/*": ["./src/images/*"],
      "@layouts/*": ["./src/layouts/*"]
    }
  }
}
