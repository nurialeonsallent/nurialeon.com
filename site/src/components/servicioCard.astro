---
import GoIcon from "~/icons/go.astro"
import { servicios } from "~/content/servicios"

export type Props = {
  type: keyof typeof servicios
}

const { icon: Icon, ...servicio } = servicios[Astro.props.type]
---

<a href="/contacto" class="servicio-card">
  <div class="icon"><Icon /></div>
  <div class="title">
    <h3>{servicio.nombre}</h3>
  </div>
  <span class="subtitle">Para {servicio.target}</span>
  <span class="price">{servicio.precio}</span>
  <button>Â¡Pide tu Cita! <GoIcon /></button>
</a>

<style>
  .servicio-card {
    @apply mt-12 flex min-w-[300px] grow flex-col items-center justify-start gap-2 rounded-lg border-2 border-brand-300 bg-brand-50 no-underline transition-all hover:border-brand-400 hover:shadow-lg lg:gap-4;

    .icon {
      @apply -mt-6 flex h-12 w-12 items-center justify-center rounded-full bg-brand-400 text-2xl text-white lg:-mt-7 lg:h-14 lg:w-14;
    }

    .title {
      @apply flex items-center justify-center gap-4 px-2 lg:px-3;
    }

    h3 {
      @apply m-0 text-xl lg:tracking-tighter;
    }

    .price {
      @apply m-0 shrink-0 font-title text-3xl font-bold text-neutral-700;
    }

    .subtitle {
      @apply m-0 -mt-2 text-sm italic text-neutral-700 lg:-mt-3;
    }

    p {
      @apply grow p-2 text-left text-sm text-black lg:px-3 lg:py-0 lg:text-base;
    }

    button {
      @apply w-full rounded-b-md border-t-2 border-brand-300 bg-white px-3 py-2 text-center font-medium text-brand-500;
    }
  }
</style>
